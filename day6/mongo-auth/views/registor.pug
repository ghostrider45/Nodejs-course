extends template 

block vars
 -var title= "New User Registration"

block body 
  h2 New users register here 
   if error 
      p Error: #{error}
  form(method="post")
    div(class="mb-3")
     label(for="firstname",class="form-label") Your First name: 
     input(id="firstname", type="text" name="firstname" class="form-control")

     div(class="mb-3")
     label(for="lastname",class="form-label") Your Last name: 
     input(id="lastname", type="text" name="lastname" class="form-control")
     
     div(class="mb-3")
     label(for="email",class="form-label") Your E-mail id:
     input(id="email", type="email" name="email" class="form-control")
    
    div(class="mb-3")
     label(for="pass",class="form-label") Your Password:
     input(id="pass", type="password" name="password" class="form-control")
    div(class="mb-3")
     button(type="submit" class="btn btn-primary mb-3") Register