extends template 

block vars
 -var title= "Home page"

block body 
  h2 please login with your registered credentials here 
   if error 
      p #{error}
  form(method="post")
    div(class="mb-3") E-mail
     label(for="email",class="form-label") 
     input(id="email", type="email" name="email" class="form-control")
    div(class="mb-3")
     label(for="pass",class="form-label") Password
     input(id="pass", type="password" name="password" class="form-control") 
    div(class="mb-3")
     button(type="submit" class="btn btn-primary mb-3") Login